        section.section-contact
            //- h2=title 
            form(action="", method="post")  
                div.email-div
                    label(for="email") Email Address:
                    input#email.email(type="email", name="email" placeholder="please enter you email")
                div.message-div
                    label(for="message") Message: 
                    textarea#message.message(name="message", cols="30", rows="10") 
                div.button-div
                    button.button(type="submit") Submit

        footer(class="main-footer")
            div(class="footer--contact__links")
                a(href="/" class="header--brand__footer")
                    h1 FlexCoin
                div(class="fimg")
                    <a href="https://twitter.com/RoseSopuruchi" target="_blank"><img src="https://res.cloudinary.com/ros4eva/image/upload/v1566984742/twitter_yvunur.png" alt="Twitter" width="20" height="20"></a>
                    img(src="/images/icon-facebook.svg" alt="facebook" style background-color="red")
                    a(href="https://wa.me/2349052030195")
                        img(src="/images/icon-instagram.svg" alt="instagram")
            div(class="navigations")
                nav(class="main--nav1")
                    ul(class="main-footer__links")
                        li(class="main-footer__link")
                            a(href="#") About Us
                        li(class="main-footer__link")
                            a(href="/contact") Contact
                        li(class="main-footer__link")
                            a(href="#") Blog
                nav
                    ul(class="main-footer__links")
                        li(class="main-footer__link")
