doctype html

html 
    head
        <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/FlexCoin-16x16.png">
        <link rel="manifest" href="/images/site.webmanifest">
        link(rel="stylesheet", href="/stylesheets/bitcoin.css")
    body
        main
            section.main-div
                div
                    <button class="toggle-button">
                        <span class="toggle-button__bar"></span>
                        <span class="toggle-button__bar"></span>
                        <span class="toggle-button__bar"></span>
                    </button>
                div(id="leftModal" class="modal")
                    nav(class="main-nav modal-content")                    
                        span(class="closeBtn") &times;
                    div#profile 
                        img(src="/images/phone.jpg", alt="")
                        p #{user.email}
                        ul(class="main-nav__items")
                            li(class="main-nav__item")
                                a(href="/") Home
                            li(class="main-nav__item")
                                a(href="/dashboard") Dashboard
                            li(class="main-nav__item")
                                a(href="/airtime") Airtime
                            li(class="main-nav__item")
                                a(href="/data") Data
                            li(class="main-nav__item")
                                a(href="/bitcoin") BitCoin
                            li(class="main-nav__item")
                                a(href="/bills") Bills
                            li(class="main-nav__item")
                                a(href="/transactions") Transaction
                            li(class="main-nav__item")
                                a(href="/transfer") Transfer
                            li(class="main-nav__item")
                                a(class="main-nav__itemm" href="/account") Settings
                    div.logOut 
                        a(href="/logOut") Log Out 
            div.right-dashboard
                section.form-group
                    form(action="" method="POST") 
                        div.amount-div
                            label(for="amount") Amount:
                            input.amount(type="number" name="amount" required="true" placeholder="Amount To Recharge")
                        //- value=(undefined===airtime ? "" : airtime.amount))  
                        //- div.clearFix
                        div.rate-div
                            label(for="rate") Amount To Recive:
                            input#rate(type="text" name="rate" disabled="true" placeholder="Racipient Rate" required="true")
                        //-  value=(undefined===transfer ? "" : transfer.bankName)) 
                        div.wallet-div
                            label(for="wallet") Wallet Address:
                            input.wallet(type="text" placeholder="Recipient Wallet" name="wallet" required="true")
                        //-  value=(undefined===airtime ? "" : transfer.accountNum)) 
                        button.transfer-btn(type="submit") Transfer
                        
                section.section-tractions 
                    h2 Transactions Historys
                    div.transactions 
                        ul.list-transactions
                            li.list-transaction__item ID
                                p Coming soon
                                //- p #{details.id} 
                            li.list-transaction__item AMOUNT
                                p Coming soon
                            li.list-transaction__item WALLET
                                p Coming soon
                            li.list-transaction__item REF
                                p  Coming soon
                            li.list-transaction__item DATE
                                p Coming soon

            script(src="/javascripts/dashboard.js") 
